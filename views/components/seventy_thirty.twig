<div class="gallery__row {% if module.flip_percentage %}gallery__row--thirty-seventy{% else %}gallery__row--seventy-thirty{% endif %}">
  <figure class="gallery__item">
    <img class="gallery__image" srcset="{{ Image(module.first_image).srcset }}" sizes="(min-width: 768px) 70vw, 100vw" alt="{{ module.first_image.alt }}">
  </figure>
  <figure class="gallery__item">
    <img class="gallery__image" srcset="{{ Image(module.second_image).srcset }}" sizes="(min-width: 768px) 70vw, 100vw" alt="{{ module.second_image.alt }}">
  </figure>
</div>