<nav class="navigation" aria-hidden="true">
  <ul class="navigation__set navigation__set--top">
    {% for item in menu.get_items %}
      <li class="navigation__item">
        <h3 class="navigation__header"><a href="{{item.get_link}}" class="navigation__link navigation__link--top">{{item.title}}</a></h3>
        {% if item.children %}
          <ul class="navigation__set navigation__set--nested">
            {% for child in item.children %}
              <li class="navigation__item navigation__item--nested"><a href="{{child.link}}" class="navigation__link navigation__link--nested">{{child.title}}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>