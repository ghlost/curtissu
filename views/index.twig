{% extends "base.twig" %}

{% block content %}
  <main class="page-content row">
    <section class="post-list small-12 columns">
      {% block post_list %}
        {% for post in posts %}
          {% include ['components/teaser-'~post.post_type~'.twig', 'components/teaser.twig'] %}
        {% endfor %}
      {% endblock %}
    </section> <!-- /.post-list.small-12.columns -->
  </main> <!-- /.page-content.row -->
{% endblock %}